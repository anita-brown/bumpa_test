{
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended"],

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "react/prop-types": 0
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
 
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
